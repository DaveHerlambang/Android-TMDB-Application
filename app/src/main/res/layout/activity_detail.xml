<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="@color/grey"
    tools:context=".DetailActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/dark">

        <ImageView
            android:id="@+id/imageDetail"
            android:layout_width="match_parent"
            android:layout_height="300dp" />

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/titleDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardDetail"
        android:text="TITLE"
        android:textSize="34dp"
        android:textStyle="bold"
        android:fontFamily="@font/roboto_bold"
        android:layout_marginLeft="10dp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/dateDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleDetail"
        android:fontFamily="@font/crimson_text_regular"
        android:text="tanggal"
        android:layout_marginLeft="10dp"
        android:textColor="@color/white"
        android:textSize="16dp" />
    <TextView
        android:id="@+id/ratingDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/dateDetail"
        android:layout_below="@id/titleDetail"
        android:layout_marginLeft="60dp"
        android:text="Rating"
        android:textColor="@color/white"
        android:fontFamily="@font/crimson_text_regular"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/overviewDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dateDetail"
        android:fontFamily="@font/crimson_text_regular"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="ini overview"
        android:textColor="@color/white"
        android:textSize="18dp" />

    <Button
        android:id="@+id/buttonProfile"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:text="Back to Home"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/custom_button"
        android:onClick="detailToHome"/>


</RelativeLayout>